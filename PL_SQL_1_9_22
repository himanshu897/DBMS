DECLARE
	num number := 150;
	num1 number := 165;
	sum number;
	avg real;
BEGIN
	sum := num + num1;
	dbms_output.put_line('Sum : ' || sum ;

	avg := sum / 2;
	dbms_output.put_line('Averge : ' || avg );
	
END;
